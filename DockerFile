# Use a base image with Python
FROM python:slim

# Install dependencies for Chrome and chromedriver
RUN apt-get update -y && \
    apt-get install -y wget curl unzip ca-certificates \
    libx11-dev libx264-dev libssl-dev libnss3-dev libgdk-pixbuf2.0-0 \
    libxss1 libappindicator3-1 libasound2 libgtk-3-0

# Download and install Google Chrome
RUN wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && \
    dpkg -i google-chrome-stable_current_amd64.deb && \
    apt-get install -f -y

# Check the Chrome installation path and set environment variable correctly
RUN which google-chrome-stable

# Copy chromedriver into the correct location
COPY chromedriver /opt/render/project/src/chromedriver

# Make sure chromedriver has executable permissions
RUN chmod +x /opt/render/project/src/chromedriver

# Set the environment variables for Chrome and ChromeDriver
ENV CHROME_BIN=/usr/bin/google-chrome-stable
ENV CHROMEDRIVER_PATH=/opt/render/project/src/chromedriver

# Install python dependencies
COPY requirements.txt /app/requirements.txt
RUN pip install -r /app/requirements.txt

# Add the project files
COPY . /app

# Set the working directory
WORKDIR /app

# Run your Python application
CMD ["python", "main.py"]

# Debug: list permissions of chromedriver
RUN ls -l /opt/render/project/src/chromedriver
