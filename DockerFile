# Use a base image with Python
FROM python:slim

# Install dependencies for Chrome and ChromeDriver
RUN apt-get update -y && \
    apt-get install -y wget curl unzip ca-certificates \
    libx11-dev libx264-dev libssl-dev libnss3-dev libgdk-pixbuf2.0-0 \
    libxss1 libappindicator3-1 libasound2 libgtk-3-0

# Download and install Google Chrome
RUN wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && \
    dpkg -i google-chrome-stable_current_amd64.deb && \
    apt-get install -f -y

# Set the environment variable for Chrome binary path
ENV CHROME_BIN=/usr/bin/google-chrome-stable

# Install ChromeDriver using WebDriverManager or manual copy
RUN wget -q https://chromedriver.storage.googleapis.com/114.0.5735.90/chromedriver_linux64.zip -O /chromedriver.zip && \
    unzip /chromedriver.zip -d /usr/local/bin/ && \
    rm /chromedriver.zip

# Set the environment variable for ChromeDriver
ENV CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

# Install Python dependencies
COPY requirements.txt /app/requirements.txt
RUN pip install -r /app/requirements.txt

# Add the project files
COPY . /app

# Set the working directory
WORKDIR /app

# Run your Python application
CMD ["python", "main.py"]
