FROM python:3.9-alpine

# Install dependencies for Chromium
RUN apk update && \
    apk add --no-cache \
    bash \
    curl \
    libx11 \
    libxcomposite \
    libxrandr \
    libxi \
    libxtst \
    nss \
    freetype \
    harfbuzz \
    ttf-freefont \
    chromium

# Set CHROME_BIN environment variable to point to the correct binary
ENV CHROME_BIN=/usr/bin/chromium

# Install Python dependencies
COPY requirements.txt /app/requirements.txt
RUN pip install -r /app/requirements.txt

# Add the project files
COPY . /app

# Set the working directory
WORKDIR /app

# Expose port for Flask if running in web service mode
EXPOSE 8080

# Run your Python application
CMD ["python", "main.py"]
