FROM python:3.9-alpine

RUN apk update && \
    apk add --no-cache \
    bash \
    curl \
    libx11 \
    libxcomposite \
    libxrandr \
    libxi \
    libxtst \
    nss \
    freetype \
    harfbuzz \
    ttf-freefont \
    chromium

ENV CHROME_BIN=/usr/bin/chromium-browser

RUN curl -sS https://storage.googleapis.com/chrome-for-testing-public/131.0.6778.264/linux64/chromedriver-linux64.zip -o /chromedriver.zip && \
    unzip /chromedriver.zip -d /usr/local/bin/ && \
    rm /chromedriver.zip && \
    chmod +x /usr/local/bin/chromedriver

ENV CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

COPY requirements.txt /app/requirements.txt
RUN pip install -r /app/requirements.txt

COPY . /app

WORKDIR /app

CMD ["python", "main.py"]
